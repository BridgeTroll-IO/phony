{
    "name": "eloquent/phony",
    "description": "A better mocking framework for PHP.",
    "keywords": ["mock", "mocking", "stub", "stubbing", "spy", "dummy", "double", "test"],
    "homepage": "https://github.com/eloquent/phony",
    "license": "MIT",
    "authors": [
        {
            "name": "Erin Millard",
            "email": "ezzatron@gmail.com",
            "homepage": "http://ezzatron.com/"
        }
    ],
    "require": {
        "php": ">=5.3",
        "sebastian/comparator": "~1",
        "sebastian/exporter": "~1"
    },
    "require-dev": {
        "hamcrest/hamcrest-php": "~1.2.0",
        "mockery/mockery": "~0.9.0",
        "phake/phake": "~1",
        "phpspec/prophecy": "~1",
        "phpunit/phpunit": "~4",
        "simpletest/simpletest": "~1"
    },
    "autoload": {
        "psr-4": {
            "Eloquent\\Phony\\": "src"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "cp composer.json composer.json.tmp; cp composer.lock composer.lock.tmp; true",
            "(php -r\"exit(version_compare(phpversion(),'5.4.0-dev','>=')?0:1);\" && composer require --dev counterpart/counterpart:~1.5.0); true",
            "cp composer.json.tmp composer.json; cp composer.lock.tmp composer.lock; rm composer.json.tmp; rm composer.lock.tmp; true"
        ]
    }
}
