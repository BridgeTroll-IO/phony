{
    "name": "eloquent/phony",
    "description": "Mocks, stubs, and spies for PHP.",
    "keywords": ["mock", "mocking", "stub", "stubbing", "spy", "dummy", "double", "test", "fake"],
    "homepage": "https://github.com/eloquent/phony",
    "license": "MIT",
    "authors": [
        {
            "name": "Erin Millard",
            "email": "ezzatron@gmail.com",
            "homepage": "http://ezzatron.com/"
        }
    ],
    "require": {
        "php": ">=5.3"
    },
    "require-dev": {
        "ext-pdo": "*",
        "errors/exceptions": "^0.1",
        "hamcrest/hamcrest-php": "^2",
        "icecave/semver": "^3",
        "peridot-php/leo": "^1",
        "peridot-php/peridot": "^1",
        "phpunit/phpunit": "^4|^5"
    },
    "autoload": {
        "psr-4": {
            "Eloquent\\Phony\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Eloquent\\Phony\\": ["test/src"]
        },
        "files": [
            "test/src/ClassA.php",
            "test/src/TestClass.php"
        ]
    }
}
